{
    "id": "com.github.wadahiro.keycloak-ciba",
    "name": "Keycloak CIBA",
    "description": "This plugin serves as an authentication device for CIBA with keycloak.",
    "homepage_url": "https://github.com/wadahiro/mattermost-plugin-keycloak-ciba",
    "support_url": "https://github.com/wadahiro/mattermost-plugin-keycloak-ciba/issues",
    "icon_path": "assets/starter-template-icon.svg",
    "version": "0.1.0",
    "min_server_version": "5.12.0",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "darwin-arm64": "server/dist/plugin-darwin-arm64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        }
    },
    "settings_schema": {
        "header": "",
        "footer": "",
        "settings": [
            {
                "key": "CallbackURL",
                "display_name": "Keycloak CIBA callback URL",
                "type": "text",
                "help_text": "Set keycloak CIBA callback URL."
            },
            {
                "key": "BotUsername",
                "display_name": "Bot username",
                "type": "username",
                "help_text": "Select bot's username you want to use."
            }
        ]
    }
}
